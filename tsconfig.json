{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "lib": ["ES2018", "DOM"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "build",
    "target": "es5",
    "sourceMap": true,
    "strict": true,
    "typeRoots": ["./types", "./node_modules/@types"],
    "types": ["node", "truffle-contracts"]
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "build"]
}
